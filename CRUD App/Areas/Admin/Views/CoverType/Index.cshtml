@model IEnumerable<CRUDApp.Models.CoverType>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-6">
            <h2 class="text-white">Cover Types</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create">Add Cover Type</a>
        </div>
    </div>
    <br />
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th width="50%">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th width="30%">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id" style="width: 100px;">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" style="width: 100px;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
