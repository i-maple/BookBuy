@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="row mt-4">
		<div class="col-6">
			<h2 class="text-white">Products</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-action="Upsert">Add Product</a>
		</div>
	</div>
	<br />
	<table id="dataTable" class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Title</th>
				<th>ISBN</th>
				<th>Price</th>
				<th>Author</th>
				<th>Description</th>
				<th>Category</th>
				<th>CoverType</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>

	</table>
</div>

@section Scripts {
	@{
		<script src="~/js/ProductTable.js"></script>
	}
}